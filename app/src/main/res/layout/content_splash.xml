<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_splash"
        tools:context=".SplashActivity" android:background="@android:color/darker_gray">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" tools:text="Fantasy Football Statistics"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp" android:textAlignment="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:text="Fantasy Football Statistics"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:text="for" android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:text="for"/>
    <com.romainpiel.shimmer.ShimmerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theLeagueTxt" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" tools:text="The League"
            android:fontFamily="cursive" android:textSize="36sp" android:textStyle="bold" android:textAllCaps="false"
            android:text="The League"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/theLeagueTxt" app:layout_constraintEnd_toEndOf="@+id/theLeagueTxt"
            app:layout_constraintStart_toStartOf="@+id/theLeagueTxt"/>
</android.support.constraint.ConstraintLayout>